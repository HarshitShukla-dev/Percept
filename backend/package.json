    "express-rate-limit": "^7.5.0",
    "nodemailer": "^6.9.16"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.1",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.17",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
